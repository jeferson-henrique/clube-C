#include <iostream>
#include <cmath>

int main() {
    int x1, y1, x2, y2;

    std::cout << "--- Calculadora de Movimentos da Rainha ---" << std::endl;
    std::cout << "Posicao inicial X (1-8): ";
    std::cin >> x1;
    std::cout << "Posicao inicial Y (1-8): ";
    std::cin >> y1;
    std::cout << "Posicao alvo X (1-8): ";
    std::cin >> x2;
    std::cout << "Posicao alvo Y (1-8): ";
    std::cin >> y2;

    if (x1 < 1 || x1 > 8 || y1 < 1 || y1 > 8 || x2 < 1 || x2 > 8 || y2 < 1 || y2 > 8) {
        std::cout << "\nCoordenadas invalidas! Use valores entre 1 e 8." << std::endl;
        return 1;
    }

    int dx = std::abs(x2 - x1);
    int dy = std::abs(y2 - y1);
    int movimentos;

    if (x1 == x2 && y1 == y2) {
        movimentos = 0;
    } else if (dx == 0 || dy == 0 || dx == dy) {
        movimentos = 1;
    } else {
        movimentos = 2;
    }

    std::cout << "\n--- Resultado ---" << std::endl;
    std::cout << "Para ir de (" << x1 << ", " << y1 << ") para (" << x2 << ", " << y2 << "), a rainha leva **" << movimentos << " movimento(s)**." << std::endl;

    return 0;
}
